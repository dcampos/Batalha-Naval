package batalhanaval;


/**
 * Jogo de batalha naval.
 * 
 * @author Darlan P. de Campos
 * @author Roger de  Córdova Farias
 * 
 */

public class Jogo {
	private Jogador[] jogadores;

	public Jogo() {
		jogadores = new Jogador[2];
		jogadores[0] = new Jogador(this);
		jogadores[1] = new Jogador(this);
	}

	/**
	 * Retorna um boolean indicando se o jogo já terminou.
	 * 
	 * @return true ou false
	 */
	public boolean estaTerminado() {
		return (jogadores[0].getFrotaRestante() == 0
			|| jogadores[1].getFrotaRestante() == 0);
	}

	public Jogador getJogador(int i) {
		return jogadores[i];
	}

	/**
	 * Retorna o oponente do jogador
	 * passado como par�metro.
	 * 
	 * @param j
	 * @return Jogador
	 */
	public Jogador getOponente(Jogador j) {
		return (j == jogadores[0]) ? jogadores[1] : jogadores[0];
	}
	
	
}
